<% content_for :title, "Add Order" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Add Order <small>Please </small></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <%= form_for @order do|f| %>
          <%= f.hidden_field :order_status , value: "Confirm" %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Customer Info</h3>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, :placeholder=>"Enter full name", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Phone</label>
              <%= f.text_field :phone, :placeholder=>"Enter phone number", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Address</label>
              <%= f.text_area :address, :placeholder=>"Enter full address", :class=>"form-control", :rows=>"3", :required=>'' %>
            </div>
          </div>
          <div class="col-sm-6"><h3 class="m-t-none m-b">Order Info</h3>
            <div class="form-group">
              <label>Delivery Date</label>
              <%= f.date_field :delivery_date, :class=>'form-control', :required=>'' %>
            </div>
            <div class="form-group">
              <label>Product</label>
              <% options = options_from_collection_for_select(@product, 'id', 'product_name') %>
              <%= f.select :product_id,  options, {:include_blank => 'Please Select'}, {:class=>'form-control m-b select2_demo_1', :id=>'product_id', :required=>''} %>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Select Payment Option</label>
                  <%= f.select :payment_option, options_for_select(['Cash on Delivery'], :selected=>'Cash on Delivery'), {:include_blank => false}, {:class=>'form-control m-b'} %>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Quantity</label>
                  <%= f.text_field :quantity, :placeholder=>"Enter Quantity", :type=>'number', :class=>"form-control", :required=>'', :value=>'1' %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>