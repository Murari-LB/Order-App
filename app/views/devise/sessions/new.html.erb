
<h2 style="font-size: 40px; margin-bottom: 50px; font-weight: 900; color: #1a42b3">Order Management</h2>

<% if notice %>
    <div class="alert alert-info">
      <strong>Notice!</strong> <%= notice %>
    </div>
<% end %>

<% if alert %>
    <div class="alert alert-danger">
      <strong>Alert!</strong> <%= alert %>
    </div>
<% end %>

<div class="ibox-content">
  <h3 style="margin-bottom: 40px;">Welcome to Order App</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group m-t">
        <%= f.email_field :email,:placeholder=>"Email", :class=>"form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder=>"Password", :class=>"form-control", autocomplete: "off" %>
      </div>
      <%= f.submit "Log in", :class => "btn btn-primary block full-width m-b" %>
  <% end %>
  <div class="form-group">
    <a href="/users" class= "btn btn-primary block full-width m-b">Sign Up</a><br>
  </div>
</div>

