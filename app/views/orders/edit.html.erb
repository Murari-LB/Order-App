<% content_for :title, "Edit Order" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Update Order status Please</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <%= form_for @order do|f| %>
          <div class="col-sm-6 b-r">
            <h3 class="m-t-none m-b">Customer Info</h3>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, :disabled => true, :class=>"form-control" %>
            </div>
            <div class="form-group">
              <label>Phone</label>
              <%= f.text_field :phone, :disabled => true, :class=>"form-control" %>
            </div>
            <div class="form-group">
              <label>Address</label>
              <%= f.text_area :address, :disabled => true, :class=>"form-control", :rows=>"3"%>
            </div>
          </div>
          <div class="col-sm-6"><h3 class="m-t-none m-b">Order Info</h3>
            <div class="form-group">
              <label>Delivery Date</label>
              <%= f.date_field :delivery_date, :disabled => true, :class=>'form-control' %>
            </div>
            <div class="form-group">
              <label>Product</label>
              <% options = options_from_collection_for_select(@product, 'id', 'product_name', :selected => f.object.product_id) %>
              <%= f.select :product_id,  options, {:include_blank => false}, {:class=>'form-control m-b select2_demo_1', :id=>'product_id'} %>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Payment Option</label>
                  <%= f.text_field :payment_option, :disabled => true, :class=>"form-control"%>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Quantity</label>
                  <%= f.text_field :quantity, :disabled => true, :class=>"form-control"%>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Select Payment Option</label>
                  <%= f.select :order_status, options_for_select(['Confirm', 'Ready', 'Send', 'Delivered', 'Returned', 'Cancelled'], :selected => f.object.order_status), {:include_blank => false}, {:class=>'form-control m-b'} %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>