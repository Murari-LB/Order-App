<% content_for :title, "All Orders" %>

<div class="row">
  <div class="col-lg-12">
    <%if current_user.admin?%>
      <p>
        <button class="btn btn-primary" type="button" style="float: right;" data-toggle="collapse" data-target="#filter" aria-expanded="false" aria-controls="filter"><i class="fa fa-filter" aria-hidden="true"></i>
          Filter
        </button>
      </p>
      <br/>
      <div class="collapse" id="filter">
        <div class="ibox-content">
          <%= form_tag "/orders", :method => 'get' do %>
            <div class="col-lg-4">
              <span class="form-label">
                <label>Status</label>
              </span>
              <%= select_tag :order_status, options_for_select(['Confirm','Ready','Send', 'Delivered', 'Returned','Cancelled'], params[:order_status]), class: "form-control", "data-size"=>10, title: "Select"  %>
            </div>
            <div class="col-lg-4">
              <span class="form-label">
                <label>Select User</label>
              </span>
              <%= select_tag :user_id, options_for_select(@users, params[:user_id]), class: "form-control", "data-size"=>10, title: "Select"  %>
            </div>
            <div class="form-group m-t">
              <%= hidden_field_tag :filter, true %>
              <%= submit_tag "Apply Filter", class: "btn btn-primary", style: "margin-top: 23px;"%>
              
              <a style="margin-top: 23px;" href="/orders?filter=false" class="btn btn-primary"><i class="fa fa-repeat" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Reset"></i></a>
            </div>
          <%end%>
        </div>
      </div>
      <br/>
    <%end%>
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Orders Data</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Delivery Date</th>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Payment Option</th>
                <th>Status</th>
                <%if current_user.admin?%>
                  <th width="101px">Buttons</th>
                <%end%>
              </tr>
            </thead>

            <tbody>

            <% @orders.each  do |order| %>

              <tr class="">
                <td><%= order.id %></td>
                <td><%= order.name %></td>
                <td><%= order.phone %></td>
                <td><%= order.address %></td>
                <td><%= order.delivery_date %></td>
                <td><%= order.product.product_name %></td>
                <td><%= order.product.price %></td>
                <td><%= order.quantity %></td>
                <td><%= order.product.price * order.quantity %></td>
                <td><%= order.payment_option %></td>
                
                  <% if order.order_status == 'Confirm'  %>
                    <td><span class="badge badge-white"> <%= order.order_status %></span></td>
                  <% elsif order.order_status == 'Ready' %>
                    <td><span class="badge badge-warning"> <%= order.order_status %></span></td>
                  <% elsif order.order_status == 'Send' %>
                    <td><span class="badge badge-success"> <%= order.order_status %></span></td>
                  <% elsif order.order_status == 'Delivered' %>
                    <td><span class="badge badge-primary"> <%= order.order_status %></span></td>
                  <% elsif order.order_status == 'Returned' %>
                    <td><span class="badge badge-danger"> <%= order.order_status %></span></td>
                  <% elsif order.order_status == 'Cancelled' %>
                    <td><span class="badge badge-inverse"> <%= order.order_status %></span></td>
                  <% end %>
                <%if current_user.admin?%>
                <td>
                  <%= link_to order_path(order.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_order_path(order.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to order_path(order.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-print" aria-hidden="true"></i>
                  <% end %>
                </td>
                <% end %>
              </tr>

            <% end %>

            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>